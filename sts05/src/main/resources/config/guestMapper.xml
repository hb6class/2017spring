<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
  <mapper namespace="com.hb.ex05.model.GuestDao">
  	
  	<select id="selectAll" resultType="com.hb.ex05.model.entity.GuestVo">
  	SELECT * FROM GUEST03
  	</select>
  	<insert id="insertOne" parameterType="com.hb.ex05.model.entity.GuestVo">
  	INSERT INTO GUEST03 VALUES (#{sabun},#{name},NOW(),#{pay})
  	</insert>
  	<select id="selectOne" parameterType="int" resultType="com.hb.ex05.model.entity.GuestVo">
  	SELECT * FROM GUEST03 WHERE SABUN=#{value}
  	</select>
  </mapper>